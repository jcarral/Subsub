{% extends "PicBundle::layout.html.twig" %}
{% block content %}
    <div class="upload-title">
        <h2>{{post.title}}</h2>
        {% if post.description is defined %}
            <p>{{post.description}}</p>
        {% else %}
            <p>Soy un soso y no pongo descripci칩n a mis fotos</p>
        {% endif %}
    </div>
    <section class="detail-main">
        <img src="{{asset('uploads/'~post.image)}}" alt="" class="detail-photo">
        <aside class="detail-info">
            <header class="detail-info--header">
              <i class="fa fa-info"></i>
                Detalles
            </header>
            <div class="detail-info--item">

                <div class="row row-align-center">
                <i class="fa fa-user"></i>
                {{post.author.name}}
                <div class="btn btn-follow">Seguir</div>
                </div>

            </div>
            <div class="detail-info--item">
                <i class="fa fa-calendar"></i>
                {{post.insertedDate|date("m/d/Y")}}
            </div>
            <div class="detail-info--item">
                <i class="fa fa-star-o"></i>
                Valoraci칩n
                <div class="detail-info--rating">
                    <input type="radio" name="star1" id="star1" value="" class="hidden">
                    <input type="radio" name="star2" id="star2" value="" class="hidden">
                    <input type="radio" name="star3" id="star3" value="" class="hidden">
                    <input type="radio" name="star4" id="star4" value="" class="hidden">
                    <input type="radio" name="star5" id="star5" value="" class="hidden">
                    <label for="star1" class="rating-star"><i class="fa fa-star"></i></label>
                    <label for="star1" class="rating-star"><i class="fa fa-star"></i></label>
                    <label for="star1" class="rating-star"><i class="fa fa-star"></i></label>
                    <label for="star1" class="rating-star"><i class="fa fa-star"></i></label>
                    <label for="star1" class="rating-star"><i class="fa fa-star"></i></label>
                </div>
            </div>

            <div class="detail-divider"></div>
            <h5>
              <i class="fa fa-tags"></i>
              Etiquetas</h5>
            <ul class="detail-info--tags" id="tagList">
              {% if app.user != null and app.user.id == post.author.id %}

                  <input type="text" name="" value="" id="tagInput" class="tag-input" placeholder="A침adir un nuevo tag">
                  <input type="hidden" value={{post.id}} id="hiddenId">

                {% endif %}
                {% for tag in tags %}
                  <li class="tag" data-tag="{{tag.id}}"><a href="">{{tag.name}}</a>
                  {% if app.user != null and app.user.id == post.author.id %}
                    <span class="tag-remove">&times;</span>
                  {% endif %}
                </li>
                {% endfor %}
            </ul>
        </aside>
    </section>
    <section class="detail-comments">
      <header class="detail-comments--header">
        <h5><i class="fa fa-comments"></i>Comentarios</h5>
        <span>#XX</span>
      </header>
        {% if app.user != null %}
      <form action="" class="detail-comments-new">
        <textarea name="comment" id="commentContent" cols="30" rows="10"></textarea>
        <input type="submit" name="" value="A침adir comentario">
      </form>
       {% endif %}
      <ul class="detail-comments-list">

      </ul>
    </section>
{% endblock %}
