{% extends "PicBundle::layout.html.twig" %}
{% block content %}
  

    <div class="login-container row center-h">
        <form class="column" action="{{path('login_check')}}" method="post">
            <h2 class="login-title">Iniciar sesión</h2>
            <label for="username">Nombre de usuario:</label>
            <input type="email" id="username" name="_username" value="{{last_username}}" placeholder="Introduce el nombre de usuario" class="login-input">
            <label for="_password">Contraseña:</label>
            <input type="password" name="_password" value="" placeholder="Introduce la contraseña" class="login-input">

            <input type="submit" name="" value="Login" class="login-submit">
            <input type="hidden" name="_target_path" value="/login">
        </form>

      <div class="registro">
        {{form_start(form)}}
          <h2 class="login-title">Crear cuenta nueva</h2>
          <label>Nombre de usuario:</label>
          {{form_widget(form.name)}}
          <label>Correo electrónico:</label>
          {{form_widget(form.mail)}}
          <label>Contraseña:</label>
          {{form_widget(form.pass)}}
          <label>Repite la contraseña:</label>
          <input type="password" name="" value="" id="repeatPass" class="login-input" placeholder="Repite la contraseña">
        {{form_end(form)}}
      </div>
    </div>
{% endblock %}
