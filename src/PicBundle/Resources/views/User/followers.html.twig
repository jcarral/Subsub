<li>
  <input type="radio" name="tabs" id="tab3">
          <label for="tab3" class="tab-label"><i class="fa fa-users"></i>Seguidores</label>
          <div id="tab-content-list" class="tab-content animated fadeIn">
            {% if followers|length > 0 %}
            <ul class="follow-list">
              {% for follower in followers %}
                <li class="follow-item row center-v space-bet-h">
                  <a href="{{ path('user_profile', {'id': follower.follower.id}) }}"  class="user">
                    <i class="fa fa-user"></i>
                    {{follower.follower.name}}
                  </a>
                  
                </li>

              {% endfor %}
            </ul>
            {% else %}
              {{user.name}} no tiene seguidores
            {% endif %}
          </div>
</li>
