<li>
  <input type="radio" checked name="tabs" id="tab1">
          <label for="tab1" class="tab-label"><i class="fa fa-picture-o"></i>Fotos</label>
          <div id="tab-content-list" class="tab-content animated fadeIn">
            {% if posts|length > 0 %}
            <ul class="profile-posts">
              {% for post in posts %}
                <li class="profile-posts--item">
                  <img src="{{ asset('uploads/'~post.image)}}" alt="" height="150px" width="150px">
                  <a href="{{ path('post_detail', {'postId': post.id})}}">{{post.title|length > 9 ? post.title|slice(0, 10) ~ '...' : post.title}}</a>

                </li>
              {% endfor %}
            </ul>
            <a href="#" class="btn btn-show-all">Ver todos los posts de {{user.name}}</a>
            </div>
            {% else %}
              No hay post disponibles
            {% endif %}

          </div>
</li>
